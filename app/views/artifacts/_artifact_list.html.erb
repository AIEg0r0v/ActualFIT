
<div class="row-fluid Artifact-HeaderRow">
	<div class="span12 Artifact-Header">
		<div class="row-fluid">
			<%= link_to(image_tag('icon_32/plus_32.png', alt:"add artifact"), upload_file_path, class: "ActionElement") %>
			<%= link_to(image_tag('icon_32/save_32.png', alt:"download all artifacts"), '#', class: "ActionElement") %>
		</div>
		<div class="row-fluid">
			
		</div>
	</div>
</div>
<div class="row-fluid ArtifactsRowContainer">
	<div class="span12 Artifacts">
		<ul class="thumbnails">
			<% if current_inspection.artifacts.any? %>
			<% current_inspection.artifacts.each do |art|  %>
				<%= content_tag :li do -%>
					<%= content_tag :div, class: "thumbnail" do -%>
						<%= content_tag :div, class: "well well-small Artifact" do -%>
							<%= content_tag :div, class: "row-fluid ArtifactBody" do -%>
							    <%= artifact_icon (art) %>
							    <%= content_tag(:strong, art.name, class:"ArtifactName") %>
							<% end -%>
							<%= artifactActionPanel art %>
						<% end -%>
					<% end -%>
				<% end -%>
			<% end %>
			<% end %>
		</ul>
	</div> <!--span12-->
</div>
