<% if can? :create, Artifact %>
<div class="row">
	<div class="span6 offset3">
		<h1>Upload a new artifact</h1>
			<!--make something with shared errors, since this is is inpection, user stuff does not work anymore-->
			<%= form_for [@inspection, @inspection.artifacts.build] do |f| %>
	    			<%= f.file_field :datafile %>
	    			<%= f.text_field :name, placeholder: "place a custom name" %>

                    <%= f.text_field :comment, placeholder: "add a comment if you want" %>

                    <%= f.submit "Upload", class: "btn btn-primary" %>
			<% end %>
		
	</div>
</div>
<% end %>