<%= content_tag :div, class: "row-fluid" do -%>
    <%= content_tag :h3, @campaign.name,  style: "text-align: center; margin-bottom: 0px;" %>

    <%= content_tag :h5, style: "text-align: center;" do -%>
            <%= link_to('Delete Campaign', campaign_path(@campaign), method: :delete, confirm: "Do you want to delete #{@campaign.name}?") if can? :destroy, @campaign %>
            <%= link_to('Create Inspection', new_inspection_path, style: "margin-left: 2em;") %>
    <% end -%>
    <%= form_for @campaign, html: {class: "form-horizontal"} do |c| %>
        <%= content_tag :div, class: "span6 offset3" do -%>
            <%= content_tag :div, class: "control-group" do -%>
                <%= c.label :name, class: "control-label" %>
                <%= content_tag :div, class: "controls" do -%>
                    <%= c.text_field :name %>
                <% end -%>
            <% end -%>
            <%= content_tag :div, class: "control-group" do -%>
                <%= c.label :comment, class: "control-label" %>
                <%= content_tag :div, class: "controls" do -%>
                    <%= c.text_field :comment %>
                <% end -%>
            <% end -%>

            <%= content_tag :div, class: "control-group" do -%>
                <%= c.label :assignments, "Group assignment", class: "control-label" %>
                <%= content_tag :div, class: "controls" do -%>
                    <%= c.file_field :assignments %>
                <% end -%>
            <% end -%>
            <%= content_tag :div, class: "control-group" do -%>
                <%= content_tag :div, class: "controls" do -%>
                    <%= c.submit 'Save changes', class: "btn btn-primary btn-large" %>
                <% end -%>
            <% end -%>
        <% end -%>
    <% end %>
<% end -%>