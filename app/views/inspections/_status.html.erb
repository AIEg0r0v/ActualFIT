<div class="">
  <%= content_tag :div, class: "chevron status#{status.titleize}", id: "status#{status.titleize}" do -%>
    <% if status == inspection.status %>
        <div class="chevron-fletching currentStatusChevronFletching"></div>
        <%= content_tag(:div, link_to(status, change_status_inspection_path(inspection, status: status), confirm: "Change #{inspection.name} status from #{inspection.status} to #{status}?", method: :put, remote: true), class: "chevron-body currentStatusChevronBody") %>
        <div class="chevron-head currentStatusChevronHead"></div>
    <% else %>
        <div class="chevron-fletching"></div>
        <%= content_tag(:div, link_to(status, change_status_inspection_path(inspection, status: status), confirm: "Change #{inspection.name} status from #{inspection.status} to #{status}?", method: :put, remote: true), class: "chevron-body") %>
        <div class="chevron-head"></div>
    <% end %>
  <% end %>
</div>
