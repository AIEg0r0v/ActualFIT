$('#dsetup, #dpupload, #dpprepare, #dpinspection, #dprework, #dpfinished').datepicker().on('changeDate', function(e){
    var y = e.date.getFullYear(),
            _m = e.date.getMonth() + 1,
            m = (_m > 9 ? _m : '0'+_m),
            _d = e.date.getDate(),
            d = (_d > 9 ? _d : '0'+_d);
    $(this).text(y + '-' + m + '-' + d);
    $(this).next("#dueDate").val(y + '-' + m + '-' + d);
    $(this).next("#dueDate").next("#submitDeadline").show();
});
