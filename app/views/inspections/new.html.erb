<% if can? :create, Inspection %>
<div class="row">
	<div class="span9 offset3">
		<h1>Creating a new inspection</h1>
		<%= form_for(@inspection) do |f| %>

			<!--make something with shared errors, since this is is inpection, user stuff does not work anymore-->
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :comment %>
			<%= f.text_field :comment %>

			<%= f.submit "Create inspection", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
<% end %>