<div class="row-fluid NavigationHeader">
			<!-- Navigation bar  -->
	<div class="navbar navbar-fixed-top navbar-inverse">
		<div class="navbar-inner">
			<div class="container-fluid">
				<%= link_to "FIT", root_path, id:"logo" %>
				<nav>
					<ul class="nav pull-right">
						<li><%= link_to "Home", root_path %></li>

						<% if signed_in? %>
							<li><%= link_to "Users", users_path %></li>

                            <% if current_user.roles.any? %>
                                <li><%= link_to current_user.roles.first.name, '#' %></li>
                            <% end %>

                            <% campaigns = Campaign.all %>
                            <% if campaigns.any? || (can? :create, Campaign) %>
                              <li class="dropdown">
                                <a href='#' class="dropdown-toggle" data-toggle="dropdown">
                                  Campaigns <b class="caret"></b>
                                </a>

                                <ul class="dropdown-menu">
                                  <% campaigns.each do |c| %>
                                      <% if can? :read, c %>
                                          <li><%= link_to c.name, c %></li>
                                      <% end %>
                                  <% end %>

                                  <% if can? :create, Campaign %>
                                      <li class="divider"></li>
                                      <li>
                                      <%= link_to "Create a campaign", new_campaign_path %>
                                      </li>
                                      <li class="divider"></li>
                                      <li><%= link_to "Campaigns list", campaigns_path %></li>
                                  <% end %>
                                </ul>
                              </li>
                            <% end %>
                          <li class="dropdown">
								<a href='#' class="dropdown-toggle" data-toggle="dropdown">
									<%= current_user.name %> <b class="caret"></b>
								</a>
								<ul class="dropdown-menu">
									<li>
										<%= link_to "Profile", current_user %>
									</li>
									<li class="divider"></li>
									<li>
										<%= link_to "Sign out", signout_path, method: "delete" %>
									</li>
								</ul>
							</li>


                            <% if (current_user.has_role? :admin, :any) || (current_user.has_role? :supervisor, :any )%>
                                <%  inspections = Inspection.all %>
                              <% else %>
                                <% inspections = current_user.inspections %>
                            <% end %>
                            <% if inspections.any? || ( can? :create, Inspection)%>
                              <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
									<span class="CurrentInspection">
										Inspections</span>
                                  <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <% inspections.each do |insp| %>
                                            <% if can? :read, insp %>
                                                <%= content_tag :li, link_to(insp.name, insp) %>
                                            <% end %>
                                        <% end %>

                                    <% if can? :create, Inspection %>
                                      <%= content_tag :li, '', class: "divider" %>
                                      <%= content_tag :li, link_to("Create an inspection", new_inspection_path) %>
                                      <%= content_tag :li, link_to("Inspections list", inspections_path) %>
                                    <% end %>
                                </ul>
                              <li>
                            <% end %>

						<% else %>
							<li><%= link_to "Sign in", signin_path %></li>
						<% end %>
					</ul>
				</nav>
			</div>
		</div>
	</div>
</div>