
<%= content_tag :tr, class: "ACTR", data: { id: remark.id } do -%>
    <td>
      <%= Artifact.find(remark.artifact_id).name if !remark.artifact_id.nil?%>
    </td>
    <td>
        <%=remark.location %>
    </td>

    <td>
        <%= remark.content %>
    </td>
    <td>
        <%= remark.remark_type %>
    </td>
    <td  class="ACTC">
          <%  author =  User.find(remark.user_id) if !remark.user_id.nil? %>
          <%= author.name %>

    </td>
    <td>
      <%= remark.created_at.localtime %>
    </td>
    <td>
      <%= remark.updated_at.localtime %>
    </td>
    <td>
          <% if can? :destroy, remark %>
              <%=  remarksActionPanel(remark) %>
          <% end %>
    </td>
<% end -%>
