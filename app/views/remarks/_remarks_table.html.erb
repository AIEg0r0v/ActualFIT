
<div class="ArtifactCommentsInner">
	<div class="CommentTable22">
		<table class="table table-striped table-hover">
			<caption class="CommentsHeader">
				<strong>Artifact Remark</strong> 
				<div class="CommentsClose"><strong>hide</strong></div>
			</caption>
			<thead>
				<tr>
					<th>Location</th>
					<th>Remark</th>
					<th>Type</th>
					<th>Author</th>
				</tr>
			</thead>
			<tbody>
				<% if current_inspection.remarks.any?%>
				<% current_inspection.remarks.each do |r| %>
					<tr class="ACTR">
					  	<td>
					  		<%= r.location %>
					  	</td>
					  	<td>
					  		<%= r.content %>
					  	</td>
					  	<td>
					  		<%= r.remark_type %>
					  	</td>
					  	<td  class="ACTC">
					  		<%  author =  User.find(r.user_id) %>
					  		<%= author.name %>
					  		<%= remarksActionPanel r %>
					  	</td>
					</tr>
				<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="input-append row-fluid">	
			<%= form_for current_user.remarks.build, remote: true do |f| %>
				<%= f.text_field :location, class: "span2", id: "appendedInputButton" %>
				<%= f.text_field :content, class: "span6", id: "appendedInputButton" %>
				<%= f.text_field :remark_type, class: "span2", id: "appendedInputButton" %>
				<%= f.hidden_field :inspection_id, {value: current_inspection.id} %>
				<%= f.submit "Submit", class: "btn" %>
			<% end %>
	</div>
</div>
