<%= content_tag :li, class: "UserPartial", user_id: user.id  do -%>
    <%= content_tag :div, class: "UserEntry" do -%>
        <%= content_tag :div, class: "row-fluid Responsible" do -%>
            <%= content_tag :div, class: "span3" do -%>
                <%= image_tag 'profile-pics/av-8714.jpg', style: "padding: 5px;" %>
            <% end -%>
            <%= content_tag :div, class: "span9" do -%>
                <%= content_tag :h4 do -%>
                    <% if can? :edit, user %>
                        <%= link_to user.name, user_path(user) %>
                    <% else %>
                        <%= user.name %>
                    <% end %>
                <% end -%>
                <%= render( :partial => 'users/user_roles', locals: {user: user}) %>
                <%= render( :partial => 'users/user_grant_role', locals: {user: user}) %>
                <%= render( :partial => 'users/user_inspections', locals: {user: user}) %>
            <% end -%>
        <% end -%>
    <% end -%>
<% end -%>
