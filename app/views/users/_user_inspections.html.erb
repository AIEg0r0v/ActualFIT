<% if user.inspections.any? %>
    <%= content_tag :h5, 'Inspections' %>
    <%= content_tag :ul, style: "list-style: none;" do -%>
        <% user.inspections.each do |insp| %>
            <%= content_tag :li do -%>
                <%= insp.name %>
                <%= link_to('delete from inspection', remove_user_inspection_path(insp, user_id: user.id), method: :put, confirm: "Remove #{user.name} from #{insp.name}", remote: true) if can? :remove_user, insp %>
            <% end -%>
        <% end %>
    <% end -%>
<% end %>