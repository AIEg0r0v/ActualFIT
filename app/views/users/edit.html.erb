<%= content_tag :div, class: "row-fluid" do -%>
  <%= form_for @user, html: {class: "form-horizontal"} do |user| %>
      <%= render 'shared/error_messages' %>
      <%= content_tag :div, class: "span6 offset3" do -%>
          <% if current_user?(@user) %>
              <h3 style="text-align: center; margin-bottom: 0px;">Update your profile</h3>
              <%= content_tag(:h5, link_to('Delete User', user_path(@user), method: :delete, confirm: "Do you want to permanently delete #{@user.name}?"), style: "text-align: center;")  if can? @user, :delete %>
          <% else %>
              <h3 style="text-align: center; margin-bottom: 0px;">Update <%= @user.name %> profile</h3>
              <%= content_tag(:h5, link_to('Delete User', user_path(@user), method: :delete, confirm: "Do you want to permanently delete #{@user.name}?"), style: "text-align: center; margin-top: 0px;")  if can? @user, :delete %>
          <% end %>
          <%= content_tag :div, class: "control-group" do -%>
              <%= user.label :name, class: "control-label" %>
              <%= content_tag :div, class: "controls" do -%>
                <%= user.text_field :name, placeholder: "FirstName LastName" %>
              <% end -%>
          <% end -%>
          <%= content_tag :div, class: "control-group" do -%>
            <%= user.label :email, class: "control-label" %>
            <%= content_tag :div, class: "controls" do -%>
                <%= user.text_field :email, placeholder: "new_email@somemailservice.com" %>
            <% end -%>
          <% end -%>
          <%= content_tag :div, class: "control-group" do -%>
            <%= user.label :skype, class: "control-label" %>
            <%= content_tag :div, class: "controls" do -%>
                <%= user.text_field :skype, placeholder: "Your skype contact info" %>
            <% end -%>
          <% end -%>
          <%= content_tag :div, class: "control-group" do -%>
            <%= user.label :phone, class: "control-label" %>
            <%= content_tag :div, class: "controls" do -%>
                <%= user.text_field :phone, placeholder: "Your phone number"%>
            <% end -%>
          <% end -%>
          <%= content_tag :div, class: "control-group" do -%>
            <%= user.label :address, class: "control-label" %>
            <%= content_tag :div, class: "controls" do -%>
                <%= user.text_field :address, placeholder: "Your address" %>
            <% end -%>
          <% end -%>
          <%= content_tag :div, class: "control-group" do -%>
            <%= user.label :additional_info, class: "control-label" %>
            <%= content_tag :div, class: "controls" do -%>
                <%= user.text_field :additional_info, placeholder: "Any additional info you want to add" %>
            <% end -%>
          <% end -%>
          <%= content_tag :div, class: "control-group" do -%>
            <%= user.label :profile_picture, class: "control-label" %>
            <%= content_tag :div, class: "controls" do -%>
                <%= user.file_field :datafile,  :accept => 'image/png,image/gif,image/jpeg' %>
            <% end -%>
          <% end -%>
          <%= content_tag :div, class: "control-group" do -%>
            <%= user.label :password, class: "control-label" %>
            <%= content_tag :div, class: "controls" do -%>
                <%= user.password_field :password, placeholder: "To change password, type new one here" %>
            <% end -%>
          <% end -%>
          <%= content_tag :div, class: "control-group" do -%>
            <%= user.label :password_confirmation, class: "control-label" %>
            <%= content_tag :div, class: "controls" do -%>
                <%= user.password_field :password_confirmation, placeholder: "To change password, type new one here" %>
            <% end -%>
          <% end -%>
        <% attribute_button = user.submit "Update Profile", class: "btn btn-primary btn-large" %>
        <%= content_tag(:div, content_tag(:div, attribute_button, class: "controls"), class: "control-group") %>
      <% end -%>
  <% end %>
<% end %>

