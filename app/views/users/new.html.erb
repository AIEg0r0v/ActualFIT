<div class="row-fluid">
	<div class="span6 offset3">
		<h1>Sign up</h1>
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :name %>
			<%= f.text_field :name, placeholder: "FirstName LastName" %>

			<%= f.label :email %>
			<%= f.text_field :email, placeholder: "your_email@example.com" %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit "Create an account", class: "btn btn-large btn-primary" %>
		<% end %>
		<h3>or <%= link_to "Log in", signin_path %></h3>
		
	</div>
</div>