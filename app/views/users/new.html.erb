


<div class="row">
	<div class="span6 offset3">
		<h1>Sign up</h1>
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>

            <%= label_tag :role %>
            <%= select_tag :role, options_for_select(["author", "inspector", "moderator", "scribe", "admin", "supervisor"],
                                                       ["author", "inspector", "moderator", "scribe", "admin", "supervisor"]), style: "padding: 0px;" %>

			<%= f.submit "Create an account", class: "btn btn-large btn-primary" %>
		<% end %>
		<h3>or <%= link_to "Sign in", signin_path %></h3>
		
	</div>
</div>