<div class="row-fluid">
	<div class="span6 offset3">
		<h1>Sign up</h1>
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :skype %>
			<%= f.text_field :skype %>

			<%= f.label :phone %>
			<%= f.text_field :phone%>

			<%= f.label :address %>
			<%= f.text_field :address %>

			<%= f.label :additional_info %>
			<%= f.text_field :additional_info %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit "Create an account", class: "btn btn-large btn-primary" %>
		<% end %>
		<h3>or <%= link_to "Log in", signin_path %></h3>
		
	</div>
</div>