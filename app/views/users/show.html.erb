
<div class="row">
    <h1>
		Hello, <%= @user.name %>
	</h1>

    <div class="span4 pull-left">
        <h3>Your chat messages (<%= @user.chat_messages.count %>)</h3>
        <% if @user.chat_messages.any? %>
            <ol class="chat_messages">
              <%= render @chat_messages %>
            </ol>
        <% end %>
    </div>

    <div class="span4 offset1 pull-left">
       <% if @user.roles.any? %>

            <% @user.roles.each do |r| %>
                <div class="row">
                     <span><strong><%= r.name %></strong></span>
                     <span><%= r.resource_type %></span>
                     <span><%= r.resource_id %></span>
                </div>

            <% end %>
        <% end %>
    </div>
</div>