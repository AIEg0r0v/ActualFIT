
<div class="row-fluid">
    <div class="span12">
        <div class="row-fluid" style="text-align: center;">
          <h1>
            <% if current_user?(@user) %>
                Hello, <%= @user.name %>
                <% if current_user?(@user) %>
                    <%= content_tag :h5, link_to("Edit Profile", edit_user_path(@user), style: "margin: 0px;") %>
                <% end %>
            <% elsif can? :edit, @user %>
                <%= @user.name %>  profile
                <%= content_tag :h5, link_to("Edit Profile", edit_user_path(@user), style: "margin: 0px;") %>
            <% else %>
                <%= @user.name %>  profile
            <% end %>
          </h1>
        </div>
        <div class="row-fluid">
          <div class="span10 offset1">
            <div class="row-fluid">
              <div class="span12" style="">
                <div class="row-fluid">
                  <div class="ProfilePicture pull-left">
                    <% if !@user.profile_picture.nil? %>
                        <%= image_tag get_profile_picture_user_url(@user), size: "250x250", alt: "Profile picture", style: "padding: 5px;" %>
                    <% else %>
                        <%= image_tag 'profile-pics/av-8714.jpg', size: "250x250", style: "padding: 5px;" %>
                    <% end %>
                  </div>
                  <div class="UserProfileAttibutes pull-left">
                    <div class=""><strong>Email</strong></div>
                    <div class=""><%= @user.email%></div>
                    <div class="">
                      <% if !@user.skype.nil? %>
                          <div class=""><strong>Skype</strong></div>
                          <div class=""><%= @user.skype %></div>
                      <% end %>
                    </div>
                    <div class="">
                      <% if !@user.phone.nil? %>
                          <div class=""><strong>Phone</strong></div>
                          <div class=""><%= @user.phone %></div>
                      <% end %> </div>
                    <div class="">
                      <% if !@user.address.nil? %>
                          <div class=""><strong>Address</strong></div>
                          <div class=""><%= @user.address %></div>
                      <% end %>
                    </div>
                    <div class="">
                      <% if !@user.additional_info.nil? %>
                          <div class=""><strong>Additional Information</strong></div>
                          <div class=""><%= @user.additional_info %></div>
                      <% end %>
                    </div>
                  </div>
                  <div class="UserProfileAttibutes pull-left">
                    <%= content_tag :div, class: "UserRoles pull-left", user_id: @user.id  do -%>
                        <%= render( :partial => 'users/user_roles', locals: {user: @user}) %>
                    <% end -%>
                    <%= content_tag :div, class: "UserInspections pull-left", user_id: @user.id  do -%>
                        <%= render( :partial => 'users/user_inspections', locals: {user: @user}) %>
                    <% end -%>
                  </div>
                </div>
                <div class="row-fluid">
                  <%= content_tag :div, class: "GrantRoles", user_id: @user.id  do -%>
                      <%= render( :partial => 'users/user_grant_role', locals: {user: @user}) %>
                  <% end -%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
</div>
