
<div class="row-fluid">
    <h1>
		Hello, <%= @user.name %>
	</h1>

    <div class="span6 pull-left" style="overflow-y: auto;">
        <h3>Your chat messages (<%= @user.chat_messages.count %>)</h3>
        <% if @user.chat_messages.any? %>
            you wrote some messages
        <% end %>
    </div>

    <div class="span6 pull-left">
       <% if @user.roles.any? %>

           <!-- Think of an idea how to check the roles in a smart way, may be by loking at join table? -->
            <% @user.roles.each do |r| %>
                <div class="row-fluid">
                     <span><strong><%= r.name %></strong></span>
                     <span><%= r.resource_type %></span>
                     <span><%= r.resource_id %></span>
                </div>

            <% end %>
        <% end %>
    </div>

</div>
<div class="row-fluid">
<h3>Click <%= link_to "here", edit_user_path(@user) %>  to edit your profile</h3>
</div>
